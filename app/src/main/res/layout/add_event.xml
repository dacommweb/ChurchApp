<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_marginTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/topMenu"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:id="@+id/topLeftMenu"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="5dp"
            android:layout_gravity="right|center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Add Devotional"
                android:textSize="18dp"
                android:textColor="#fff"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etxtcontent_border"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#000"
                android:hint="Choose Event Date"
                android:textColorHint="@color/colorPrimary"
                android:id="@+id/etxtDate"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etxtcontent_border"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#000"
                android:hint="Enter Event Title"
                android:textColorHint="@color/colorPrimary"
                android:id="@+id/etxtTitle"
                android:layout_marginBottom="10dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/etxtcontent_border"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:paddingTop="8dp"
                android:gravity="top|left"
                android:paddingBottom="8dp"
                android:inputType="textMultiLine"
                android:hint="Enter Event Description"
                android:lines="10"
                android:minLines="10"
                android:textColorHint="@color/colorPrimary"
                android:id="@+id/etxtDesc"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:id="@+id/btnSubmit"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>